# Arr Suite MCP Server Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ==============================================
# SONARR - TV Series Management
# ==============================================
SONARR_HOST=localhost
SONARR_PORT=8989
SONARR_API_KEY=your_sonarr_api_key_here
SONARR_SSL=false
SONARR_BASE_PATH=

# ==============================================
# RADARR - Movie Management
# ==============================================
RADARR_HOST=localhost
RADARR_PORT=7878
RADARR_API_KEY=your_radarr_api_key_here
RADARR_SSL=false
RADARR_BASE_PATH=

# ==============================================
# PROWLARR - Indexer Management
# ==============================================
PROWLARR_HOST=localhost
PROWLARR_PORT=9696
PROWLARR_API_KEY=your_prowlarr_api_key_here
PROWLARR_SSL=false
PROWLARR_BASE_PATH=

# ==============================================
# BAZARR - Subtitle Management
# ==============================================
BAZARR_HOST=localhost
BAZARR_PORT=6767
BAZARR_API_KEY=your_bazarr_api_key_here
BAZARR_SSL=false
BAZARR_BASE_PATH=

# ==============================================
# OVERSEERR - Request Management
# ==============================================
OVERSEERR_HOST=localhost
OVERSEERR_PORT=5055
OVERSEERR_API_KEY=your_overseerr_api_key_here
OVERSEERR_SSL=false
OVERSEERR_BASE_PATH=

# ==============================================
# JACKETT - Alternative Indexer (Optional)
# ==============================================
# JACKETT_HOST=localhost
# JACKETT_PORT=9117
# JACKETT_API_KEY=your_jackett_api_key_here
# JACKETT_SSL=false

# ==============================================
# PLEX - Media Server
# ==============================================
PLEX_HOST=localhost
PLEX_PORT=32400
PLEX_TOKEN=your_plex_token_here
PLEX_SSL=false

# ==============================================
# GLOBAL SETTINGS
# ==============================================
REQUEST_TIMEOUT=30
MAX_RETRIES=3
LOG_LEVEL=INFO

# ==============================================
# FINDING YOUR API KEYS
# ==============================================
# Sonarr/Radarr/Prowlarr:
#   Settings → General → Security → API Key
#
# Bazarr:
#   Settings → General → Security → API Key
#
# Overseerr:
#   Settings → General → API Key
#
# Plex Token:
#   1. Visit: https://support.plex.tv/articles/204059436-finding-an-authentication-token-x-plex-token/
#   2. Sign in to Plex Web App
#   3. View any media item → Get Info → View XML
#   4. Look for X-Plex-Token in the URL
#   OR use: curl -X POST 'https://plex.tv/users/sign_in.json' \
#           -d 'user[login]=YOUR_EMAIL&user[password]=YOUR_PASSWORD'
#
# ==============================================
# SECURITY NOTES
# ==============================================
# - Keep this file secure and never commit to git
# - Use strong, unique API keys
# - For production, consider using SSL (set *_SSL=true)
# - Limit network access to these services
# - Rotate API keys periodically
